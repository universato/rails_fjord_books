<p id="notice"><%= notice %></p>

<h1>書籍</h1>

<%= paginate @books, window: 2 %>

<br>

<%= page_entries_info @books %>

<br><br>

<table>
  <thead>
    <tr>
      <th><%= Book.human_attribute_name(:title) %></th>
      <th><%= Book.human_attribute_name(:memo) %></th>
      <th><%= Book.human_attribute_name(:author) %></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= book.title %></td>
        <td><%= book.memo %></td>
        <td><%= book.author %></td>
        <td><%= link_to t(:show, scope: %i[dictionary button]), book %></td>
        <td><%= link_to t(:edit, scope: %i[dictionary button]), edit_book_path(book) %></td>
        <td><%= link_to t(:delete, scope: %i[dictionary button]), book, method: :delete, data: { confirm: t(:delete, scope: %i[confirm]) } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= paginate @books, window: 2 %>

<br>

<%= link_to t(:new, scope: %i[dictionary button]), new_book_path %>
